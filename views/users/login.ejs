<% layout("./layouts/boilerplate") -%>
<div class="row mt-3">
    <h1 class="col-4 offset-4 mt-3" style="font-size: 30px;">Login</h1>
    <div class="col-4 offset-4 mt-3">
        <form action="/login" method="post" class="needs-validation"
        novalidate>
            <div class="mb-3">
                <label for="username" class="form-label" >Username:</label>
                <input
                  name="username"
                  id="username"
                  placeholder="please enter username"
                  type="text"
                  class="form-control"
                  required
                />        
              </div>
            <div class="mb-3">
                <label for="password" class="form-label" class="needs-validation"
                novalidate>Password:</label>
                <input
                  name="password"
                  id="password"
                  placeholder="please enter password"
                  type="password"
                  class="form-control"
                  required
                />
              </div>
              <br />
              <button class="btn btn-success">Login</button>
              <br /><br />
        </form>
    </div>
</div>